<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean id="replier" class="nkorange.secretary.DefaultReplier">
        <property name="listener" ref="listener"/>
        <property name="worker" ref="worker"/>
    </bean>
    <bean id="processor" class="nkorange.secretary.core.nlp.StandfordNLPProcessor">
    </bean>
    <bean id="listener" class="nkorange.secretary.ScreenReader"/>
    <bean id="worker" class="nkorange.secretary.DefaultWorker"/>
    <bean id="memory" class="nkorange.secretary.core.memory.Memory"/>
</beans>